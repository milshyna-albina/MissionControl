<Page x:Class="Travelling.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UserTextBox="clr-namespace:Travelling"
      mc:Ignorable="d" 
      Title="Page4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="255"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Experimental Route" FontSize="80" VerticalAlignment="Center" 
           HorizontalAlignment="Center" Margin="0,0,0,15" Foreground="#7243A9" FontWeight="Bold"/>
        
        <Border Grid.Row="1" x:Name="RouteBorder" Background="White" BorderBrush="#7243A9" BorderThickness="3" 
        CornerRadius="10" Padding="25,10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="RouteTextBlock" FontSize="45" Foreground="#7243A9" TextWrapping="Wrap" 
                   TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Viewbox>
        </Border>

        <TextBlock Grid.Row="2" x:Name="AllCitiesTextBlock" Text="All cities:" HorizontalAlignment="Center" 
           FontSize="40" Foreground="#7243A9"/>

        <ListBox Grid.Row="3" x:Name="RouteListBox" Width="600" Margin="275,0,275,0" FontSize="30"
 Background="White" BorderBrush="#7D619B" BorderThickness="2"
 HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
               Foreground="White"
               FontSize="30"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#7D619B"
                              ShadowDepth="1"
                              BlurRadius="2"
                              Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#DEBCF3"/>
                    <Setter Property="BorderBrush" Value="#7D619B"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color ="#7658AD"
                              ShadowDepth="0"
                              BlurRadius="0"
                              Opacity="1"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <TextBlock Grid.Row="4" x:Name="TotalDistanceTextBlock" FontSize="35" VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="#7243A9"/>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <UserTextBox:InputTextBox x:Name="CityTextBox" Grid.Column="1" HorizontalAlignment="Center" Header="city" Placeholder="Enter city" />

            <Button Grid.Column="2" x:Name="AddCityButton" Width="250" Height="60" Style="{StaticResource WhiteButtonStyle}" 
            Margin="0,10,0,0" Click="AddCityButton_Click" Tag="/images/add_city.png">
                <TextBlock Text="Add city" FontSize="25" Foreground="#7D619B" 
       FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <Button Grid.Column="3" x:Name="RemoveCityButton" Width="250" Height="60" Margin="0,10,0,0"
            Style="{StaticResource WhiteButtonStyle}" Click="RemoveCityButton_Click" Tag="/images/remove_city.png">
                <TextBlock Text="Remove city" FontSize="25" Foreground="#7D619B" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            </Button>
              </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width ="100" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="SaveButton" HorizontalAlignment="Right" Width="350" Height="70" 
            Style="{StaticResource PurpleButtonStyle}" Margin="0,0,0,20" Click="SaveButton_Click">
                <TextBlock Text="Save" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
            <TextBlock x:Name="SaveStatusTextBlock"  Grid.Column="0" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                 Margin="0,0,55,0"/>
            <Button Grid.Column="2" x:Name="ClearRouteButton" HorizontalAlignment="Left" Width="350" Height="70" Style="{StaticResource PurpleButtonStyle}" 
                Margin="0,0,0,20" Cursor="Hand" Click="ClearButton_Click">
                <TextBlock Text="Clear route" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
            <TextBlock x:Name="ClearStatusTextBlock" Grid.Column="2" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="120,0,0,0"/>
        </Grid>

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" 
                Style="{StaticResource SmallPurpleButtonStyle}" Click="ReturnButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Return" FontSize="30" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
            Style="{StaticResource SmallPurpleButtonStyle}" Click="ExitButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Exit " FontSize="30" Foreground="White"/>
                    <Image Source="/images/exit.png" Width="40" Height="40"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid x:Name="ClearedRoutePanel" Grid.Row="1" Grid.RowSpan="4" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="The route has been cleared." FontSize="45" Foreground="#7243A9" FontWeight="SemiBold"
           HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="NoRoutePanel" Grid.Row="1" Grid.RowSpan="6" Visibility="Collapsed" HorizontalAlignment="Center" 
      VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="No route found!" FontSize="60" Foreground="#7243A9" HorizontalAlignment="Center" />
            <Image Grid.Row="1" Source="/images/no_route.png" Width="500" Height="500" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
