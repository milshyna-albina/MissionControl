<Page x:Class="Travelling.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="340"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Load traveler's data:" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"
           Foreground="#7243A9" FontWeight="Bold"/>

        <Image Grid.Row="1" Source="/images/page2.png" HorizontalAlignment="Center" Stretch="Uniform"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Right" x:Name="LoadDataButton" VerticalAlignment="Center" Width="300" Height="80" Style="{StaticResource WhiteButtonStyle}" 
                Tag="/images/folder.png"  Click="LoadDataButton_Click" Margin="0,0,40,0" >
                <TextBlock Text="Load Data" FontSize="35" FontWeight="Bold" Foreground="#604184"/>
            </Button>

            <Button Grid.Column="1" HorizontalAlignment="Left" x:Name="LoadMapButton" VerticalAlignment="Center" Width="300" Height="80" Style="{StaticResource WhiteButtonStyle}" 
                   Tag="/images/load_map.png"  Click="LoadMapButton_Click" Margin="40,0,0,0" >
                <TextBlock Text="Load Map" FontSize="35" FontWeight="Bold" Foreground="#604184"/>
            </Button>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TravelerStatusText" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" 
                 FontSize="20" Visibility="Collapsed"/>
            <TextBlock x:Name="MapStatusText" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" 
                 FontSize="20" Visibility="Collapsed"/>
        </Grid>

        <Button Grid.Row="5" Width="400" Height="100" HorizontalAlignment="Center" x:Name="PlanRouteButton" VerticalAlignment="Bottom"
            Style="{StaticResource PurpleButtonStyle}" Click="ContinueButton_Click">
            <TextBlock Text="Plan Route" FontSize="50" FontWeight="Bold" Foreground="White"/>
        </Button>
        
        <TextBlock x:Name="PlanRouteStatusText" Grid.Row="6" VerticalAlignment="Top" HorizontalAlignment="Center" 
            FontSize="20" Visibility="Collapsed"/>

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" 
                Style="{StaticResource SmallPurpleButtonStyle}" Click="ReturnButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock Text="Return" FontSize="30" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
    Style="{StaticResource SmallPurpleButtonStyle}" Click="ExitButton_Click" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Exit " FontSize="30" Foreground="White"/>
                    <Image Source="/images/exit.png" Width="40" Height="40"/>
                </StackPanel>
            </Button>
        </Grid>

    </Grid>
</Page>
