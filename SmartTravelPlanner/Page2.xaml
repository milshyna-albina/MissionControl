<Page x:Class="Travelling.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="340"/>
            <RowDefinition Height="145"/>
            <RowDefinition Height="170"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Please load .json file and add a map from .txt file" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"
           Foreground="#7243A9" FontWeight="Bold"/>

        <Image Grid.Row="1" Source="/images/no_route.png" HorizontalAlignment="Center" Margin="0,0,0,0" Stretch="Uniform"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" x:Name="LoadDataButton" VerticalAlignment="Center" Width="300" Height="80" Style="{StaticResource WhiteButtonStyle}" 
                Tag="/images/load_map.png"  Click="LoadDataButton_Click" Margin="0,0,40,0" >
            <TextBlock Text="Load Data" FontSize="35" FontWeight="Bold" Foreground="#604184"/>
        </Button>
            <TextBlock x:Name="TravelerStatusText" Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
            FontSize="25" Visibility="Collapsed" Margin="0,0,80,0"/>
            
            <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" x:Name="LoadMapButton" VerticalAlignment="Center" Width="300" Height="80" Style="{StaticResource WhiteButtonStyle}" 
        Tag="/images/load_map.png"  Click="LoadMapButton_Click" Margin="40,0,0,0" >
                <TextBlock Text="Load Map" FontSize="35" FontWeight="Bold" Foreground="#604184"/>
            </Button>
            <TextBlock x:Name="MapStatusText" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="80,0,0,0"
    FontSize="25" Visibility="Collapsed"/>
        </Grid>

        <Button Grid.Row="3" Width="400" Height="100" HorizontalAlignment="Center"
    Style="{StaticResource PurpleButtonStyle}"  Click="ContinueButton_Click">
            <TextBlock Text="Plan Route" VerticalAlignment="Top" FontSize="50" FontWeight="Bold" Foreground="White"/>
        </Button>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
    <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" 
    Style="{StaticResource SmallPurpleButtonStyle}" Click="ReturnButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
            <TextBlock Text="Return" FontSize="30" Foreground="White"/>
        </StackPanel>
    </Button>
    <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
    Style="{StaticResource SmallPurpleButtonStyle}" Click="ExitButton_Click" >
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Exit " FontSize="30" Foreground="White"/>
            <Image Source="/images/exit.png" Width="40" Height="40"/>
        </StackPanel>
    </Button>
</Grid>

        </Grid>
</Page>
