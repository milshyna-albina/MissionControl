<Page x:Class="Travelling.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#E6E2F3">
    <Grid Height="900">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Planned Route" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center"
            Foreground="#7243A9" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" x:Name="RouteTextBlock" FontSize="35" HorizontalAlignment="Center" Foreground="#7243A9"/>
        <TextBlock Grid.Row="2" x:Name="TotalDistanceTextBlock" FontWeight="Bold" FontSize="25" Margin="30,0,0,0" Foreground="#7243A9"/>
        <TextBlock Grid.Row="3" Text="All cities:" FontWeight="Bold" FontSize="25" Margin="30,0,0,0" Foreground="#7243A9"/>
        <ListBox Grid.Row="4" x:Name="RouteListBox" Margin="250,0,250,0" FontSize="30"
         Background="White" BorderBrush="#7D619B" BorderThickness="2"
         HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#7243A9"/>
                    <Setter Property="BorderBrush" Value="#7D619B"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Width="300" Height="70" Style="{StaticResource PurpleButtonStyle}" Margin="0,0,30,0">
                <TextBlock Text="Save" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
            <Button Grid.Column="1" Width="300" Height="70" Style="{StaticResource PurpleButtonStyle}" Margin="30,0,0,0">
                <TextBlock Text="Clear route" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
        </Grid>

        <Button Grid.Row="6" Width="250" Height="80" HorizontalAlignment="Center"
            Style="{StaticResource PurpleButtonStyle}">
            <TextBlock Text="Load" VerticalAlignment="Center" FontSize="50" FontWeight="Bold" Foreground="White"/>
        </Button>

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,55" 
                    Style="{StaticResource SmallPurpleButtonStyle}" Click="ReturnButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Return" FontSize="30" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,55"
                    Style="{StaticResource SmallPurpleButtonStyle}" Click="ExitButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Exit " FontSize="30" Foreground="White"/>
                    <Image Source="/images/exit.png" Width="40" Height="40"/>
                </StackPanel>
            </Button>
        </Grid>

    </Grid>
</Page>