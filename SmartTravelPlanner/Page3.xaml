<Page x:Class="Travelling.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:UserTextBox="clr-namespace:Travelling">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="255"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="170"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Planned Route" FontSize="80" VerticalAlignment="Center" 
                   HorizontalAlignment="Center" Margin="0,0,0,15" Foreground="#7243A9" FontWeight="Bold"/>
        
        <Border Grid.Row="1" x:Name="RouteBorder" Background="White" BorderBrush="#7243A9" BorderThickness="3" CornerRadius="10" Padding="25,10"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="RouteTextBlock" FontSize="45" Foreground="#7243A9" HorizontalAlignment="Center" />
        </Border>

        <TextBlock Grid.Row="2" x:Name="AllCitiesTextBlock" Text="All cities:" HorizontalAlignment="Center" 
                   FontSize="40" Foreground="#7243A9"/>
        
        <ListBox Grid.Row="3" x:Name="RouteListBox" Width="600" Margin="275,0,275,0" FontSize="30"
         Background="White" BorderBrush="#7D619B" BorderThickness="2"
         HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                       Foreground="White"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#7D619B"
                                      ShadowDepth="1"
                                      BlurRadius="2"
                                      Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#DEBCF3"/>
                    <Setter Property="BorderBrush" Value="#7D619B"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color ="#7658AD"
                                      ShadowDepth="0"
                                      BlurRadius="0"
                                      Opacity="1"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <TextBlock Grid.Row="4" x:Name="TotalDistanceTextBlock" FontSize="35" VerticalAlignment="Top"
                   HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="#7243A9"/>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="SaveButton" HorizontalAlignment="Right" Width="350" Height="70" 
                    Style="{StaticResource PurpleButtonStyle}" Margin="0,50,0,0" Click="SaveButton_Click">
                <TextBlock Text="Save" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
            <TextBlock x:Name="SaveStatusTextBlock" FontSize="20" HorizontalAlignment="Center" 
                       Visibility="Collapsed" Margin="0,90,0,0"/>
            <Button Grid.Column="1" x:Name="ModifyButton" HorizontalAlignment="Center" Width="350" Height="70" 
                        Style="{StaticResource PurpleButtonStyle}" Margin="0,50,0,0" Click="ContinueButton_Click" >
                <TextBlock Text="Modify route" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
            <Button Grid.Column="2" x:Name="ClearRouteButton" HorizontalAlignment="Left" Width="350" Height="70" Style="{StaticResource PurpleButtonStyle}" Margin="0,50,0,0" Cursor="Hand">
                <TextBlock Text="Clear route" VerticalAlignment="Center" FontSize="33" FontWeight="SemiBold" Foreground="White"/>
            </Button>
        </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" 
                    Style="{StaticResource SmallPurpleButtonStyle}" Click="ReturnButton_Click" Width="270">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Add new traveler" FontSize="30" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                    Style="{StaticResource SmallPurpleButtonStyle}" Click="ExitButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Exit " FontSize="30" Foreground="White"/>
                    <Image Source="/images/exit.png" Width="40" Height="40"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid x:Name="NoRoutePanel" Grid.Row="1" Grid.RowSpan="5" Visibility="Collapsed" HorizontalAlignment="Center" 
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="No route found!" FontSize="60" Foreground="#7243A9" HorizontalAlignment="Center" />
            <Image Grid.Row="1" Source="/images/page2.png" Width="500" Height="500" HorizontalAlignment="Center"/>
        </Grid>

    </Grid>
</Page>